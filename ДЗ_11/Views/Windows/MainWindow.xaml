<Window x:Class="ДЗ_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ДЗ_11"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:ДЗ_11.ViewModels"
        xmlns:cmd="clr-namespace:ДЗ_11.Infrastructure.Commands"
        Title="BankSystem" Height="500" Width="Auto">
    <Window.DataContext>
        <view:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Меню" Height="20" Width="auto">
                <MenuItem Header="Сохранить" FontSize="14"/>
                <MenuItem Header="Загрузить" FontSize="14"/>
                <MenuItem Header="Смена пользователя" FontSize="14"/>
                <MenuItem Header="Выход" FontSize="14"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Text"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="121*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Test" Height="90" Width="110" Margin="30,37,60,265"/>
            <!--<Button Grid.Column="0" Content="Клиенты" Height="90" Width="110" Margin="30,37,60,265" Command="{Binding ShowListUsersCommand}"
                    CommandParameter="{Binding Users.Count}" IsEnabled="{Binding BtnShowListUsersStatus}"/>-->
            <DataGrid Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding Users}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="Auto" Binding="{Binding Id}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Фамилия" Width="Auto" Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="Имя" Width="Auto" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Отчество" Width="Auto" Binding="{Binding Patronymic}"/>
                    <DataGridTextColumn Header="Телефон" Width="Auto" Binding="{Binding PhoneNumber}"/>
                    <DataGridTextColumn Header="Серия и номер паспорта" Width="Auto" Binding="{Binding PassportNumber}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
