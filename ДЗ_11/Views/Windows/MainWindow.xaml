<Window x:Class="ДЗ_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ДЗ_11"
        xmlns:pass ="clr-namespace:ДЗ_11.Models"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:ДЗ_11.ViewModels"
        xmlns:cmd="clr-namespace:ДЗ_11.Infrastructure.Commands"
        Title="BankSystem" Height="500" Width="1020"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <view:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Меню" Height="20" Width="auto">
                <MenuItem Header="Сохранить" FontSize="14"/>
                <MenuItem Header="Загрузить" FontSize="14"/>
                <MenuItem Header="Смена пользователя" FontSize="14"/>
                <MenuItem Header="Выход" FontSize="14"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding IsReadOnly}" Width="50"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" MinWidth="160"/>
                <ColumnDefinition Width="39*"/>
                <ColumnDefinition Width="331*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Добавить клиента" Width="150" Padding="1"
                   VerticalAlignment="Top" Margin="10,10,0,0" Command="{Binding AddNewUserCommand}" Cursor="Hand"/>
            <DataGrid Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding Clients}" GridLinesVisibility="Vertical"
                      AlternatingRowBackground="LightGray" VerticalGridLinesBrush="DarkGray" Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="Auto" Binding="{Binding Id}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Фамилия" Width="Auto" Binding="{Binding LastName}" IsReadOnly="{Binding IsReadOnly}"/>
                    <DataGridTextColumn Header="Имя" Width="Auto" Binding="{Binding Name}" IsReadOnly="{Binding IsReadOnly}"/>
                    <DataGridTextColumn Header="Отчество" Width="Auto" Binding="{Binding Patronymic}" IsReadOnly="{Binding IsReadOnly}"/>
                    <DataGridTextColumn Header="Телефон" Width="Auto" Binding="{Binding PhoneNumber}"/>
                    <DataGridTextColumn Header="Серия и номер паспорта" Width="Auto" Binding="{Binding PassportNumber}" IsReadOnly="{Binding IsReadOnly}"/>
                    <!--<DataGridTemplateColumn Header="Серия и номер паспорта" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="pass:Passport">
                                <TextBlock Text="{Binding Series}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>
